extends base.pug 

block scripts 
    script(src='/static/index.js')

block style 
    style 
         include ../static/style.css
         include ../static/styleContact.css 

block content 
    div.container
        p.register Registration Form
        form(action="/contact" method="post" class="myForm") 
            input(type="text",class="myInput", name="name1", placeholder="Your Sweet Name")
            label(for="gender")
            select.myInput(name="gender") 
                option(value="female") Female
                option(value="male") Male
                option(value="others") Others
            input(type="number",class="myInput", name="age", placeholder="Your age")
            label(for="dance")
            select.myInput(name="dance_profile") 
                option(value="bharatnatyam") Bharatnatyam
                option(value="kuchipudi") Kuchipudi
                option(value="kathakali") Kathakali
                option(value="mohiniattam") Mohiniattam
                option(value="odissi") Odissi
                option(value="manipuri") Manipuri
                option(value="kathak") Kathak
                option(value="sattariya") Sattariya
            label(for="batch")
            select.myInput(name="batch_timing")
                option(value="morning_batch") Morning Batch (7:00 am to 9:00 am)
                option(value="afternoon_batch") Afternoon Batch (3:00 pm to 5:00 pm)
                option(value="evening_batch") Evening Batch (8:00 pm to 10:00 pm)
            input(type="phone",class="myInput", name="phone", placeholder="Your Phone No")
            input(type="email",class="myInput", name="email", placeholder="Your Email Id")
            textarea(name="address",,class="myInput" cols="30", rows="6", placeholder='Your Address')
            button(class="btn")
                |Register
    
    
        


        